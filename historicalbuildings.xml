<?xml version="1.0" encoding="UTF-8"?>
<project name="historicalbuildings" default="all">
  
  
  <property file="historicalbuildings.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
  <path id="jdk.classpath.1.6">
    <fileset dir="${jdk.home.1.6}">
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/alt-rt.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.6}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>
  
  
  <!-- Global Libraries -->
  
  <path id="library.android_1.6_google_apis.classpath">
    <pathelement location="/home/tom/opt/android-sdk-linux/add-ons/addon_google_apis_google_inc_4/libs/maps.jar"/>
    <pathelement location="/home/tom/opt/android-sdk-linux/platforms/android-4/android.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm.jar"/>
    <pathelement location="${javac2.home}/asm-commons.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module yegbuildings -->
  
  <dirname property="module.yegbuildings.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.yegbuildings" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.yegbuildings" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.yegbuildings" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.yegbuildings" value="${compiler.args}"/>
  
  <property name="yegbuildings.output.dir" value="${module.yegbuildings.basedir}/../../../../../home/tom/yegbuildings/out/production/yegbuildings"/>
  <property name="yegbuildings.testoutput.dir" value="${module.yegbuildings.basedir}/../../../../../home/tom/yegbuildings/out/test/yegbuildings"/>
  
  <path id="yegbuildings.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="yegbuildings.module.production.classpath">
    <path refid="${module.jdk.classpath.yegbuildings}"/>
    <path refid="library.android_1.6_google_apis.classpath"/>
  </path>
  
  <path id="yegbuildings.runtime.production.module.classpath">
    <pathelement location="${yegbuildings.output.dir}"/>
  </path>
  
  <path id="yegbuildings.module.classpath">
    <path refid="${module.jdk.classpath.yegbuildings}"/>
    <pathelement location="${yegbuildings.output.dir}"/>
    <path refid="library.android_1.6_google_apis.classpath"/>
  </path>
  
  <path id="yegbuildings.runtime.module.classpath">
    <pathelement location="${yegbuildings.testoutput.dir}"/>
    <pathelement location="${yegbuildings.output.dir}"/>
    <path refid="library.android_1.6_google_apis.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.yegbuildings">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.yegbuildings">
    <patternset refid="excluded.from.module.yegbuildings"/>
  </patternset>
  
  <path id="yegbuildings.module.sourcepath">
    <dirset dir="${module.yegbuildings.basedir}/../../../../../home/tom/yegbuildings">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.yegbuildings" depends="compile.module.yegbuildings.production,compile.module.yegbuildings.tests" description="Compile module yegbuildings"/>
  
  <target name="compile.module.yegbuildings.production" depends="register.custom.compilers" description="Compile module yegbuildings; production classes">
    <mkdir dir="${yegbuildings.output.dir}"/>
    <javac2 destdir="${yegbuildings.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.yegbuildings}/javac">
      <compilerarg line="${compiler.args.yegbuildings}"/>
      <bootclasspath refid="yegbuildings.module.bootclasspath"/>
      <classpath refid="yegbuildings.module.production.classpath"/>
      <src refid="yegbuildings.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.yegbuildings"/>
    </javac2>
    
    <copy todir="${yegbuildings.output.dir}">
      <fileset dir="${module.yegbuildings.basedir}/../../../../../home/tom/yegbuildings/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.yegbuildings.basedir}/../../../../../home/tom/yegbuildings/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.yegbuildings.tests" depends="register.custom.compilers,compile.module.yegbuildings.production" description="compile module yegbuildings; test classes" unless="skip.tests"/>
  
  <target name="clean.module.yegbuildings" description="cleanup module">
    <delete dir="${yegbuildings.output.dir}"/>
    <delete dir="${yegbuildings.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.yegbuildings" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.yegbuildings" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.opgenorth.yeg.buildings"
          android:versionCode="6"
          android:versionName="1.0.0.6" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-sdk android:minSdkVersion="6" android:targetSdkVersion="6"/>

    <!-- Remember to set debuggable to "false" for release -->
    <application android:icon="@drawable/icon"
                 android:debuggable="false"
                 android:description="@string/app_description"
                 android:label="@string/app_name">
        <provider android:name="net.opgenorth.yeg.buildings.data.SqliteContentProvider"
                  android:authorities="net.opgenorth.yeg.buildings.Provider" />
        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".views.BuildingList" android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.BuildingMap" android:label="Building Map">
            <intent-filter android:label="@string/locate_building">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/vnd.opgenorth.buildings" />
            </intent-filter>
        </activity>
    </application>
</manifest>

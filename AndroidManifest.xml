<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.opgenorth.yeg"
          android:versionCode="2"
          android:versionName="0.1.1.0"
       >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="4"/>
    <!-- Remember to set debuggable to "false" for release -->
    <application android:icon="@drawable/icon"
                 android:debuggable="true"
                 android:description="@string/app_description"
                 android:label="@string/app_name">
        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".views.YegHistoricalSitesListView" android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.BuildingMap" android:label="Building Map"/>
    </application>
</manifest>
